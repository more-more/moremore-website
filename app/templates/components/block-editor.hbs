{{model-field-input
  class="blockEditor-field _title"
  model=block
  key="title"
  value=block.title
  label="Заголовок"
}}

{{model-field-textarea
  class="blockEditor-field _body"
  model=block
  key="body"
  value=block.body
  label="Содержимое"
}}


{{#model-field
  class="blockEditor-field _parent"
  label="Группа"
}}
  {{#power-select
    options=groups
    selected=newGroup
    onchange=(action 'changeGroup')
    as |group|
  }}
    {{group}}
  {{/power-select}}
{{/model-field}}

{{async-button
  action='save'
  default="Сохранить"
  pending="Сохранение..."
  rejected="Ошибка, попробуйте снова"
  disableWhen=isClean
}}